<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_weight="05">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BearingNum"
                    android:id="@+id/textViewBearing"
                    android:layout_column="0"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="New EditText"
                    android:id="@+id/editText"
                    android:layout_weight="1"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/IDSize"
                    android:id="@+id/textView1"

                    android:layout_column="0"
                    android:paddingLeft="5dp"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="New EditText"
                    android:layout_weight="1"
                    android:id="@+id/editText1"

                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ODSize"
                    android:id="@+id/textView2"
                    android:layout_column="0"
                    android:paddingLeft="5dp"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="New EditText"
                    android:id="@+id/editText2"
                    android:layout_weight="1"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/widthText"
                    android:id="@+id/textView3"
                    android:layout_column="0"
                    android:paddingLeft="5dp"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="New EditText"
                    android:id="@+id/editText3"
                    android:layout_weight="1"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Type"
                    android:id="@+id/textView4"
                    android:layout_column="0"
                    android:paddingLeft="5dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New EditText"
                    android:id="@+id/editText4"
                    android:layout_weight="1"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ImageNum"
                    android:id="@+id/textView5"
                    android:layout_column="0"
                    android:paddingLeft="5dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New EditText"
                    android:id="@+id/editText5"
                    android:layout_weight="1"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Location"
                    android:id="@+id/textView6"
                    android:layout_column="0"
                    android:paddingLeft="5dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New EditText"
                    android:id="@+id/editText6"
                    android:layout_weight="1"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/commentsText"
                    android:id="@+id/textView7"
                    android:layout_column="0"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:password="false"
                    android:phoneNumber="false"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New EditText"
                    android:id="@+id/editText7"
                    android:layout_weight="1"
                    android:layout_column="1"
                    android:paddingRight="5dp"/>
            </TableRow>


        </TableLayout>
    </ScrollView>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/linearLayoutNavBar"
        android:gravity="bottom"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:onClick="onClickFirstRecord"
            android:id="@+id/btnFirst"
            android:src="@drawable/btn_first"
            android:contentDescription="buttonfirst"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPrev"
            android:onClick="onClickPrevRecord"
            android:layout_toRightOf="@+id/btnFirst"
            android:src="@drawable/prev"
            android:contentDescription="Prevbutton"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLast"
            android:onClick="onClickLastRecord"
            android:src="@drawable/btn_last"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btnFirst"
            android:contentDescription="button last"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNext"
            android:onClick="onClickNextRecord"
            android:src="@drawable/next"
            android:layout_toLeftOf="@+id/btnLast"
            android:contentDescription="button next"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RecordValues"
            android:typeface="serif"
            android:textSize="20dp"

            android:text="Record 1 of 1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#e40716"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btnFirst"/>


    </RelativeLayout>


</LinearLayout>

